{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "SystemInfoDb": "Server=YOUR_SERVER_NAME;Database=YOUR_DB_NAME;Trusted_Connection=True;TrustServerCertificate=True"
  },
  "AllowedHosts": "*",
  "AutoMigration": "false", // If "true", will execute SQL script in "Migrations" folder if tables don't already exist in DB.
  "Jwt": {
    "Secret": "Your-secret-key-min-33-characters", // Minimum 33 characters
    "Issuer": "Your-Issuer-Name",
    "Expiration": "15" // Time in minutes before the token expires
  },
  "ApiPassword": "Your-API-Password123" // Minimum 20 characters
}
