{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "SystemInfoDb": "Server=YOUR_SERVER_NAME;Database=YOUR_DB_NAME;Trusted_Connection=True;TrustServerCertificate=True"
  },
  "AllowedHosts": "*",
  "Jwt": {
    "Key": "Your-Secret-Key-Must-Be-33-Characters-Or-More",
    "Issuer": "YourIssuerHere"
  },
  "AutoMigration": "false" // if "true", will execute the SQL script in the "Migrations" folder if the tables don't exist in DB.
}
