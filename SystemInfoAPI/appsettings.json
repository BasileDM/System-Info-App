{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "SystemInfoDb": "Server=YOUR_SERVER_NAME;Database=YOUR_DB_NAME;Trusted_Connection=True;TrustServerCertificate=True"
  },
  "AllowedHosts": "*",
  "Jwt": {
    "Secret": "Your-secret-key-min-33-characters", // A secret key of minimum 33 characters
    "Issuer": "SystemInfoServer"
  },
  "AutoMigration": "false", // if "true", will execute the SQL script in the "Migrations" folder if the tables don't exist in DB.
  "ApiPassword": "Your-API-Password-123456789@test"
}
