{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "SystemInfoDb": "Server=YOUR_SERVER_NAME;Database=YOUR_DB_NAME;Trusted_Connection=True;TrustServerCertificate=True"
  },
  "AllowedHosts": "*",
  "Jwt": {
    "Key": "Your-secret-key-min-33-characters", // A secret key of minimum 33 characters
    "Issuer": "YourIssuerHere" // The name of the accepted issuer to recieve a authentication token
  },
  "AutoMigration": "true" // if "true", will execute the SQL script in the "Migrations" folder if the tables don't exist in DB.
}
